#!/usr/bin/env bash
# This script prints "To infinity and beyond" every 2 seconds and handles SIGTERM by printing OK and exiting

# Function to handle SIGTERM signal
term_handler() {
  echo "OK"
  exit 0
}

# Trap SIGTERM and call the handler
trap term_handler SIGTERM

# Infinite loop
while true; do
  echo "To infinity and beyond"
  sleep 2
done
